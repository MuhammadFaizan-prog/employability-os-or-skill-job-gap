<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/employability_container_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/employability_spacing_lg">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Dashboard"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/employability_fg" />
                <TextView
                    android:id="@+id/dashboardRoleBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_role_badge"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/employability_on_primary"
                    android:text="ROLE" />
                <TextView
                    android:id="@+id/dashboardLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/employability_gray_dark"
                    android:text="Last updated: —" />
            </LinearLayout>
            <Button
                android:id="@+id/dashboardRetakeAssessment"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retake Assessment"
                app:strokeColor="@color/employability_border" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/employability_gray_mid"
            android:layout_marginBottom="@dimen/employability_spacing_xl" />

        <!-- Score overview + breakdown row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="@dimen/employability_spacing_xl">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="@dimen/employability_radius_window"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:minHeight="180dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/dashboardScoreGauge"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        app:indicatorSize="140dp"
                        app:trackThickness="12dp"
                        app:progressIndicatorColor="@color/employability_fg"
                        app:trackColor="@color/employability_gray_mid"
                        app:indicatorDirectionCircular="0" />

                    <TextView
                        android:id="@+id/dashboardScoreValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="—"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/employability_fg" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Overall Score"
                    android:textSize="13sp"
                    android:textColor="@color/employability_gray_dark" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="@dimen/employability_radius_window"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score Breakdown"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/dashboardBreakdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/employability_fg" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Summary cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/employability_spacing_lg">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="@dimen/employability_radius_sm"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strengths"
                        android:textSize="12sp"
                        android:textColor="@color/employability_gray_dark" />
                    <TextView
                        android:id="@+id/dashboardStrengthsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills above benchmark"
                        android:textSize="11sp"
                        android:textColor="@color/employability_gray_dark" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="@dimen/employability_radius_sm"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skill Gaps"
                        android:textSize="12sp"
                        android:textColor="@color/employability_gray_dark" />
                    <TextView
                        android:id="@+id/dashboardGapsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Areas to improve"
                        android:textSize="11sp"
                        android:textColor="@color/employability_gray_dark" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="@dimen/employability_radius_sm"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority Focus"
                        android:textSize="12sp"
                        android:textColor="@color/employability_gray_dark" />
                    <TextView
                        android:id="@+id/dashboardPriorityCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Critical gaps"
                        android:textSize="11sp"
                        android:textColor="@color/employability_gray_dark" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:id="@+id/dashboardViewAllSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all skills →"
            android:textSize="14sp"
            android:textColor="@color/employability_fg"
            android:padding="4dp"
            android:layout_marginBottom="@dimen/employability_spacing_lg" />

        <!-- Roadmap card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/employability_spacing_lg"
            app:cardCornerRadius="@dimen/employability_radius_window"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Roadmap"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/dashboardViewRoadmap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View full roadmap →"
                        android:textSize="12sp"
                        android:textColor="@color/employability_fg" />
                </LinearLayout>
                <TextView
                    android:id="@+id/dashboardRoadmapPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/employability_gray_dark"
                    android:text="Complete onboarding to generate your roadmap." />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Project progress -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/employability_spacing_lg"
            app:cardCornerRadius="@dimen/employability_radius_window"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Project Progress"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/dashboardViewProjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View projects →"
                        android:textSize="12sp"
                        android:textColor="@color/employability_fg" />
                </LinearLayout>
                <TextView
                    android:id="@+id/dashboardProjectCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="0 of 0 completed" />
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/dashboardProjectProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:trackColor="@color/employability_gray_mid"
                    app:progressIndicatorColor="@color/employability_fg"
                    app:indeterminate="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/employability_spacing_lg">

            <Button
                android:id="@+id/dashboardQuickOnboarding"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="New Assessment"
                app:strokeColor="@color/employability_border" />
            <Button
                android:id="@+id/dashboardQuickResume"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Resume Analysis"
                app:strokeColor="@color/employability_border" />
            <Button
                android:id="@+id/dashboardQuickInterview"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Interview Prep"
                app:strokeColor="@color/employability_border" />
            <Button
                android:id="@+id/dashboardQuickProfile"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="My Profile"
                app:strokeColor="@color/employability_border" />
        </LinearLayout>

        <!-- Suggested next step (optional) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dashboardSuggestedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/employability_spacing_lg"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/employability_radius_window"
            app:cardElevation="2dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/employability_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUGGESTED NEXT STEP"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/employability_gray_dark"
                    android:letterSpacing="0.08" />
                <TextView
                    android:id="@+id/dashboardSuggestedSkill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Focus on [skill] to close your top skill gap." />
                <Button
                    android:id="@+id/dashboardSuggestedStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Start Now" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/dashboardGaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:id="@+id/dashboardError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/employability_danger"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
