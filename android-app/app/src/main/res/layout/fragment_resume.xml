<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/employability_container_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/resumeBack"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="← Back to Dashboard"
            app:strokeColor="@color/employability_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume Analysis"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/employability_fg" />

        <TextView
            android:id="@+id/resumeRoleBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_role_badge"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/employability_on_primary"
            android:layout_marginBottom="24dp" />

        <!-- Upload -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resumeUploadCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="@dimen/employability_radius_window"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <Button
                    android:id="@+id/resumeUploadBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap to upload (PDF, DOCX)" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Loading -->
        <LinearLayout
            android:id="@+id/resumeLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="24dp">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/resumeProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:indeterminate="false"
                app:progressIndicatorColor="@color/employability_fg"
                app:trackColor="@color/employability_gray_mid" />
            <TextView
                android:id="@+id/resumeLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanning resume…"
                android:textSize="14sp"
                android:textColor="@color/employability_gray_dark" />
        </LinearLayout>

        <!-- Results -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resumeResultsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/employability_radius_window"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analysis Result"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/resumeScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="Score: —"
                    android:layout_marginBottom="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestions"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/resumeSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/employability_gray_dark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- History -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent uploads"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/resumeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/employability_gray_dark"
            android:text="No uploads yet." />
    </LinearLayout>
</ScrollView>
